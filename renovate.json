{
  "$schema": "https://docs.renovatebot.com/renovate-schema.json",
  "extends": [
    "config:base",
    ":semanticCommits",
    "docker:disable"
  ],
  "docker": {
    "enabled": false
  },
  "terraform": {
    "depTypes": ["helm_release"]
  },
  "groupName": "all",
  "timezone": "Europe/Berlin",
  "schedule": [
    "before 3am on Monday"
  ],
  "labels": ["dependency"],
  "platformAutomerge": true,
  "packageRules": [
    {
      "matchUpdateTypes": ["patch", "pin", "digest", "devDependencies"],
      "automerge": true,
      "automergeType": "branch",
      "automergeSchedule": [
        "after 1am",
        "before 4am"
      ]
    },
    {
      "matchUpdateTypes": ["major", "minor"],
      "reviewers": ["devops"]
    }
  ]
}
